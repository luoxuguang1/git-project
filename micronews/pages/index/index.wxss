.container{  
 display: flex;  
  flex-direction: column;  
  height: 100%;  
  justify-content: space-between;
} 
.navbar{  
  flex: none;  
  display: flex;  
  background: #2c93dc;  
  color: #cde5f5
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 80rpx;  
}  
.navbar .item.active{  
  color: white;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 30rpx;  
  right: 30rpx;  
  height: 4rpx;  
  background: white;  
}  



.scrollview{
   border-bottom: 2px solid #ddd;
   width: 100%; 
    display: flex;
   justify-content: space-around;
   
}

.bignews{      
   position: relative;   
}

.bigtext{
  position: absolute;
  color: white;
  bottom: 20px;
  font-size: 18px;
  display: flex;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.5),rgba(0, 0, 0, 0));
}
.bigtext-source{
  display: flex;
  font-size: 12px;
  position: absolute;
  bottom: 5px;
  color: #999999;
  width: 100%;
  background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0.5));
}




.smallnews{
  display: flex;
  position: relative;  
  padding: 20rpx;
  
    
}
.smallnews image{
  width:200rpx;
  height:140rpx;
  margin-right: 20rpx;
}
.smalltext{
  flex: 1;
  height: 140rpx;
  
}
.smalltext-title{
   display: block;
  font-size: 30rpx;
  letter-spacing: 2rpx;
  line-height: 1.3;
   display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  
}
.smalltext-source{
  float: left;
  font-size: 22rpx;
  color: #999999
 
  
}


